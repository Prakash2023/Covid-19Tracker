<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_state_wise_swipe_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".State_data">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <EditText
            android:id="@+id/activity_state_wise_search_editText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"

            android:background="@color/white"

            android:drawablePadding="10dp"
            android:hint="Search"
            android:maxLines="1"
            android:inputType="textCapWords"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="@color/black"
            tools:ignore="RtlSymmetry" />

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content">


            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:alignmentMode="alignMargins"
                android:columnCount="5"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:paddingRight="8dp"

                android:rowCount="1">
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1.5"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="8dp"
                    app:cardBackgroundColor="@color/cardBackground"
                    android:layout_marginRight="8dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:text="State"
                        android:paddingBottom="12dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_height="40dp"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView

                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    app:cardBackgroundColor="@color/cardBackground"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"

                            android:text="Total"
                            android:textColor="#e600e6"
                            android:textSize="14sp" />
                        <TextView

                            android:layout_width="match_parent"
                            android:layout_marginTop="2dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/yellow"
                            android:textSize="12sp" />








                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView

                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="5dp"
                    app:cardBackgroundColor="@color/cardBackground"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginBottom="20dp"
                            android:text="Active"
                            android:textColor="@color/blue_pie"
                            android:textSize="14sp" />





                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView

                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="8dp"
                    app:cardBackgroundColor="@color/cardBackground"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Recover"
                            android:textColor="@color/green_pie"
                            android:textSize="14sp" />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:textColor="#fff"
                            android:textSize="12sp" />



                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView

                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="5dp"
                    app:cardBackgroundColor="@color/cardBackground"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Death"
                            android:textColor="@color/red"
                            android:textSize="14sp" />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:textColor="#fff"
                            android:textSize="14sp" />



                    </LinearLayout>

                </androidx.cardview.widget.CardView>



            </GridLayout>


        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/activity_state_wise_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"/>
    </LinearLayout>


</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>